<section>
    <h4>Brands</h4>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    {{#each data.brands}}
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tabBtn" onclick="changeTypeId(this)" data-id="{{typeId}}"
                            id="{{name}}-tab" data-bs-toggle="tab" data-bs-target="#{{name}}" type="button" role="tab"
                            aria-controls="{{name}}" aria-selected="true">{{name}}</button>
                    </li>
                    {{/each}}

                </ul>
                <div class="tab-content" id="myTabContent">
                    {{#each data.top5s}}
                    <div class="tab-pane fade show" id="{{name}}" role="tabpanel" aria-labelledby="{{name}}-tab">
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="card z-index-2 h-100">
                                    <div class="card-header pb-0 pt-3 bg-transparent border-0">
                                        <h6 class="text-capitalize">Top sales</h6>
                                    </div>
                                    <div class="card-body p-3">
                                        <div class="row">
                                            {{#each top5}}
                                            <div
                                                class="col-md text-center product-container d-flex flex-column justify-content-between">
                                                <div>
                                                    <img class="product-img mb-2" src="{{image}}" alt>
                                                    <h6>{{name}}</h6>
                                                </div>
                                                <div>
                                                    <div class="price">
                                                        <strong>{{convertToVND discount}}</strong>
                                                        <span>{{convertToVND price}}</span>
                                                    </div>
                                                    <div class="rating">
                                                        {{#showRating rate}}
                                                        {{/showRating}}
                                                        <span>{{comment}} đánh giá</span>
                                                    </div>
                                                </div>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        {{!-- chart --}}
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card z-index-2 h-100">
                    <div class="card-header pb-0 pt-3 bg-transparent border-0">
                        <h6 class="text-capitalize">Sales overview 2023</h6>
                    </div>
                    <div class="card-body p-3">
                        <div class="chart">
                            <canvas id="chart-line" class="chart-canvas" height="400"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>