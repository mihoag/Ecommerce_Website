<section>
  <h4>Statistics</h4>

  <div class="row mt-4 mb-5">
    <div class="col-md-8">
      <div class="card z-index-2 h-100">
        <div class="card-body p-2">
          <div class="chart">
            <canvas id="myLineChart"></canvas>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card z-index-2 h-100">
        <div class="card-body p-2">
          <div class="chart">
            <canvas id="myPieChart" class="chart-canvas"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between mx-4 mb-3 align-items-center">
    {{! select }}
    <div class="d-flex align-items-center justify-content-between fs-5 px-5 fw-bold">
      <div class="d-flex align-items-center">
        <button type="button" class="btn btn-outline-secondary" onclick="prevMonthClick()">
          ❮
        </button>
        <div class="px-3" id="MonthYear"></div>
        <button type="button" class="btn btn-outline-secondary" onclick="nextMonthClick()">
          ❯
        </button>
      </div>

    </div>
    <button type="button" class="btn btn-success fs-5" onclick="exportExcel()">Export Excel</button>

  </div>
  {{! chartJS }}
  <div class="card p-2 mb-5">

    <canvas id="myChart"></canvas>
  </div>

</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>