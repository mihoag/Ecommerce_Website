<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href="../img/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

  <title>Login Page</title>
  <style>
    * {
      padding: 0;
      margin: 0;
    }

    .login__line-border {
      width: 100%;
      margin: 10px 0 10px 0;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .login__line {
      width: 100%;
      border: none;
      border-top: 1px solid #777777;
      outline: none;
      margin: 0;
      position: absolute;
      top: 0.9rem;
    }

    .login__text-or {
      font-size: 1rem;
      padding: 0 0.5rem;
      background-color: white;
      z-index: 1;
    }

    .btn-google {
      width: 100%;
      color: #545454;
      background-color: #ffffff;
      box-shadow: 0 1px 2px 1px #ddd;
      font-size: 1rem;
    }
  </style>
</head>

<body>
  <section class="h-100">
    <div class="container h-100">
      <div class="row justify-content-sm-center h-100">
        <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
          <div class="text-center mt-2 mb-4">
            <img src="../../img/logo.jpg" alt="logo" width="400" />
          </div>
          <div class="card shadow-lg">

            <div class="card-body p-5 pb-3">
              {{#if message}}
              <div class="alert alert-danger" role="alert">
                {{message}}
              </div>
              {{/if}}
              <h1 class="fs-4 card-title fw-bold mb-4">Login Now</h1>
              <form method="POST" class="needs-validation" action="/auth/login">
                <div class="mb-2">
                  <label class="mb-2 text-muted" for="email">E-Mail Address</label>
                  <input id="email" type="email" class="form-control" name="email" value="{{user.email}}" required
                    autofocus />
                  <div class="invalid-feedback">
                    Email is invalid
                  </div>
                </div>

                <div class="mb-3">
                  <div class="mb-2 w-100">
                    <label class="text-muted" for="password">Password</label>
                  </div>
                  <input id="password" type="password" class="form-control" name="password" value="{{user.password}}"
                    required />
                  <div class="invalid-feedback">
                    Password is required
                  </div>
                </div>

                <div class="d-flex justify-content-between">
                  <a href="/auth/forgotPassword">Forgot Password</a>
                  <button type="submit" class="btn btn-primary">
                    Login
                  </button>
                </div>

                <div class="login__line-border">
                  <hr class="login__line" />
                  <div class="login__text-or">or</div>
                </div>

                <div class="mb-2">
                  <div class="text-center">
                    <a class="btn btn-lg btn-google btn-block text-uppercase btn-outline"
                      href="/auth/federated/google"><img src="https://img.icons8.com/color/16/000000/google-logo.png"
                        width="25">
                      Login with Google</a>
                  </div>
                </div>


              </form>
            </div>
            <div class="card-footer py-3 border-0">
              <div class="text-center">
                Don't have an account?
                <a href="/auth/signup" class="text-dark">Create One</a>
              </div>
            </div>
          </div>
          <div class="text-center mt-3 text-muted mb-1">
            Copyright &copy; 2023-2024 &mdash; Smartphone Store
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
  integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
  integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</html>